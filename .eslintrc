{
  "env": {
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:import/errors"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal"
        ],
        "newlines-between": "always"
      }
    ]
  },
  "overrides": [{
    "files": "test/**",
    "rules": {
      "no-undef": 0
    }
  }],
  "plugins": ["import"]
}
